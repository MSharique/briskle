<h3> Connect with the people </h3>

<table>
	<tr>
		<th>Username 1</th>
		<th>Username 2</th>
		<th> Status </th>
	</tr>
	<% @fri = Friend.where(:f1_username => @user.username) %>
	<% @fri.each do |data| %>
		<tr>
			<td><%= data.f1_username %></td>
			<td><%= data.f2_username %></td>
			<% if data.status == 0 %>
				<td> <%= link_to "Add friend", add_friend_path(:id => data.id) %> </td>
			<% elsif data.status == 1 %>
				<td> Friend Request Sent </td>
			<% elsif data.status == 2 %>
				<td> <%= link_to "Confirm friend",   confirm_path %> </td>
			<% else %>
				<td> Friends </td>
			<% end %>
		</tr>
		
	<% end %>
</table>


